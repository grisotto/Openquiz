<%= simple_form_for(@assunto) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome_assunto %>
    <%= f.input :descricao %>
    <label for="link_image">Imagem Padrao</label>:
    <%= f.file_field :link_image %>
  </div>
    <%= f.button :submit,:class => 'button right' %>
<% end %>
