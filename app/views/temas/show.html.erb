<table>
  <thead>
  <tr>
    <th>Pergunta</th>
    <th>Resposta</th>
    <th>Dica</th>
    <th>Tema</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @questaos.each do |questao| %>
      <tr>
        <td><%= questao.pergunta %></td>
